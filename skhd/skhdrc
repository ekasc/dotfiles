# restart services
# shift + alt - r : sketchybar --reload && yabai --restart-service && skhd --reload
shift + alt - r : sketchybar --reload && yabai --restart-service && skhd --reload

# terminal
# alt - return : open /Applications/Ghostty.app
alt - return : arch -arm64 /Applications/Alacritty.app/Contents/MacOS/alacritty
# alt - return : /Applications/WezTerm.app/Contents/MacOS/wezterm
# alt - return : /Applications/Rio.app/Contents/MacOS/rio
# alt - return : /Applications/kitty.app/Contents/MacOS/kitty

# browser
# alt - b : /Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome
alt - b : /Applications/Brave\ Browser.app/Contents/MacOS/Brave\ Browser
# alt - a : /Applications/Firefox\ Developer\ Edition.app/Contents/MacOS/firefox-bin 
# alt - b : /Applications/Firefox.app/Contents/MacOS/Firefox
alt - f : open /System/Library/CoreServices/Finder.app

alt - a : yabai -m space --create
shift + alt - a : yabai -m space --destroy
shift + alt - q : yabai -m window --close

# toggle fullscreen with gaps
#alt - f : yabai -m window --toggle zoom-fullscreen && ~/bin/toggle_alacritty_opacity
shift + alt - f : yabai -m window --toggle native-fullscreen
# shift + alt - t : ~/bin/wezterm

# Rotate
shift + alt - s : yabai -m space --rotate 90

# toggle topmost (keep above other windows)

alt - p : yabai -m window --toggle topmost

# focus/move between displays (yabai no-ops on single display)
alt - n : yabai -m display --focus recent 2>/dev/null || true
shift + alt - n : yabai -m window --display recent 2>/dev/null || true; yabai -m display --focus recent 2>/dev/null || true

# move window
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# swap with another window (obtaining its size and position)
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - l : yabai -m window --swap east

# change spaces
alt - 1 : $HOME/.config/yabai/scripts/focus-space-label.sh browser-main
alt - 2 : $HOME/.config/yabai/scripts/focus-space-label.sh terminal
alt - 3 : $HOME/.config/yabai/scripts/focus-space-label.sh browser-secondary
alt - 4 : $HOME/.config/yabai/scripts/focus-space-label.sh notes
alt - 5 : $HOME/.config/yabai/scripts/focus-space-label.sh pdfs
alt - 6 : $HOME/.config/yabai/scripts/focus-space-label.sh code
alt - 7 : $HOME/.config/yabai/scripts/focus-space-label.sh chat
alt - 8 : $HOME/.config/yabai/scripts/focus-space-label.sh scratch
alt - 9 : $HOME/.config/yabai/scripts/focus-space-label.sh misc

# send window to space and focus
ctrl + alt - 1 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh browser-main
ctrl + alt - 2 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh terminal
ctrl + alt - 3 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh browser-secondary
ctrl + alt - 4 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh notes
ctrl + alt - 5 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh pdfs
ctrl + alt - 6 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh code
ctrl + alt - 7 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh chat
ctrl + alt - 8 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh scratch
ctrl + alt - 9 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh misc

# send window to space
shift + alt - 1 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh browser-main
shift + alt - 2 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh terminal
shift + alt - 3 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh browser-secondary
shift + alt - 4 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh notes
shift + alt - 5 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh pdfs
shift + alt - 6 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh code
shift + alt - 7 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh chat
shift + alt - 8 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh scratch
shift + alt - 9 : $HOME/.config/yabai/scripts/move-window-to-space-label.sh misc

# Resize windows
alt - y : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0
alt - u : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20
alt - i : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20
alt - o : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

# float / unfloat window and restore position
alt - t: yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

# Toggle gaps
alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# balance size of windows
shift + alt - 0 : yabai -m space --balance

# fast focus desktop
alt - space : yabai -m space --focus recent
